{
  "name": "@loaders.gl/images",
  "version": "1.0.0",
  "description": "Framework-independent loaders and writers for images (PNG, JPG, ...)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uber-web/loaders.gl"
  },
  "keywords": [
    "webgl",
    "loader",
    "3d",
    "mesh",
    "point cloud",
    "PLY"
  ],
  "main": "dist/es5/index.js",
  "module": "dist/esm/index.js",
  "esnext": "dist/es6/index.js",
  "sideEffects": false,
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "pre-build": "npm run build-bundle && npm run build-bundle -- --env.dev",
    "build-bundle": "webpack  --display=minimal --config ../../scripts/bundle.config.js"
  },
  "browser": {
    "./src/lib/node/buffer-to-array-buffer": false,
    "./src/lib/node/encode-image-node": false,
    "./src/lib/node/parse-image-node": false,
    "get-pixels": false,
    "ndarray": false,
    "save-pixels": false,
    "fs": false,
    "util": false
  },
  "dependencies": {
    "canvas-to-blob": "0.0.0",
    "get-pixels": "^3.3.2",
    "ndarray": "^1.0.18",
    "save-pixels": "^2.3.2",
    "through": "^2.3.8"
  }
}

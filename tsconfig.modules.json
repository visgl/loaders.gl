  "exclude": [
    "modules/tile-converter",
    "modules/textures/src/libs/basis_encoder.js",
    "examples",
    "test",
    "scripts",
    "**/libs",
    "modules/*/wip",
    "modules/*/bin",
    "modules/*/wip",
    "modules/*/test",
    "modules/*/dist"
